<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bit.or.eesotto.dao.DonateDao">

	<select id="getDonationCount" resultType="int">
		SELECT COUNT(*) FROM DONATE
		
	</select>
	
	<insert id="donationWrite" parameterType="bit.or.eesotto.dto.Donate">
		INSERT INTO DONATE(TITLE, CONTENT, DOBJECT, RTIME)
		values(#{title},#{content},#{dobject},now())
	</insert>
	
	
	
	
	
